<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/category_tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_food"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_food" />

        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_cloth"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_cloth" />

        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_electronic"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_electronic" />

        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_stationary"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_stationary" />


        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_art"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_art" />


        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_digital"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_digital" />


        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_notes"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_notes" />

        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_furniture"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_furniture" />

        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag_other"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_other" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/sell_tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:checkedChip="@id/sell_tag"
        app:layout_constraintTop_toBottomOf="@id/category_tag_group"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/sell_tag_sell"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_sell" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sell_tag_lend"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_lend" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sell_tag_lost"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_lost" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sell_tag_found"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_found" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/condition_tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/sell_tag_group">

        <com.google.android.material.chip.Chip
            android:id="@+id/condition_tag_new"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_new" />

        <com.google.android.material.chip.Chip
            android:id="@+id/condition_tag_decent"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_decent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/condition_tag_refurbished"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_refurbished" />

        <com.google.android.material.chip.Chip
            android:id="@+id/condition_tag_old"
            style="@style/Theme.Oasis.Custom.Tags.Filter.Condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_old" />

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>